<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment">

    <LinearLayout
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatTextView
            android:padding="20dp"
            android:text="Note: You can find the facts about numbers here. Just type your number and see the magic! :)"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/input_number"
        android:textSize="30sp"
        android:textCursorDrawable="@drawable/cursor_color"
        android:backgroundTint="@color/design_default_color_primary"
        android:maxLines="1"
        android:gravity="center_horizontal"
        android:textColor="@color/design_default_color_primary"
        android:hint="Enter Number"
        android:inputType="number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

        <com.wang.avi.AVLoadingIndicatorView
            android:id="@+id/avi"
            android:visibility="gone"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:indicatorColor="@color/design_default_color_primary"
            app:indicatorName="BallPulseIndicator"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/look_up_btn"
        android:layout_marginTop="20dp"
        android:visibility="visible"
        android:text="lookup"
        android:textColor="@color/white"
        android:background="@color/design_default_color_primary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/do_you_know_txt"
            android:padding="10dp"
            android:textColor="@color/design_default_color_secondary_variant"
            android:textSize="18sp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:textStyle="bold"
            android:textColor="@color/black"
            android:padding="10dp"
            android:textSize="20sp"
            android:layout_gravity="start"
            android:text="Trivia about the number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_gravity="start"
            android:padding="10dp"
            android:textSize="18sp"
            android:id="@+id/txt_trivia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:textStyle="bold"
            android:textColor="@color/black"
            android:padding="10dp"
            android:textSize="20sp"
            android:layout_gravity="start"
            android:text="Math of the number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_gravity="start"
            android:padding="10dp"
            android:textSize="18sp"
            android:id="@+id/txt_math"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>
</ScrollView>